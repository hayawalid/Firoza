<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit product</title>
    <link rel="stylesheet" href="/CSS/Add-product.css">
    <script src="/Javascript/addProduct.js"></script>
    <link rel="stylesheet" href="/CSS/Admin-NavBar.css">
    <script src="/Javascript/nav-bar.js"></script>
    <script src="/Javascript/adminNavbar.js"></script>

</head>

<body>
    <%- include('./partials/Admin-NavBar.ejs') %>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <!-- <form>
                <h1>Are you sure ?</h1>
                <span class="sure"></span>

                <button type="submit" id="submitButton">Sure</button>
            </form> -->
        </div>
        <div class="form-container sign-in">
            <form>
                <h1>Add product</h1>
                <span>All fields is a must to fill</span>
                <input type="text" placeholder="Rename Product" pattern="[A-Za-z\s]+" >
                <input type="number" placeholder="Change the price" min="1000">
                <select name="Collections" id="Collections">
                    <option value="" disabled selected>Belongs to</option>
                    <option value="1">Collection 1</option>
                    <option value="1">Collection 2</option>
                    <option value="1">Collection 3</option>
                    <option value="1">Collection 4</option>
                </select>
                <select name="Category" id="Categroy">
                    <option value="" disabled selected>Categroy</option>
                    <option value="1">Ring</option>
                    <option value="1">Necklace</option>
                    <option value="1">Earrings</option>
                </select>
                <div class="uploadOuter">
                    <label for="uploadFile" class="btn btn-primary">Upload Image</label>
                    <strong>OR</strong>
                    <span class="dragBox">
                        Drag and Drop image here
                        <input type="file" onChange="dragNdrop(event)" ondragover="drag()" ondrop="drop()"
                            id="uploadFile" />
                    </span>
                </div>
                <h4 class="successful"></h4>
                <h6 class="s"></h6>
                <span class="sure"></span>

                <button type="submit" id="submitButton">Sure</button>
                <!-- <button>Edit</button> -->
            
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <!-- <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p> -->
                    <h3 class="picture-validation"></h3>
                    <div id="preview" class="image-container"></div>
                    <button class="hidden" id="login">Continue Editing</button>
                </div>
                <div class="toggle-panel toggle-right">
                    
                    <!-- <button class="hidden" id="register" onclick=" checkConditions()"></button> -->
               
                </div>
                </form>
            </div>
        </div>
    </div>


</body>

</html>