<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <link rel="stylesheet" href="/CSS/nav-bar-white.css">
    
    <link rel="stylesheet" href="/CSS/Footer.css">
    <script src="/Javascript/myAccount.js"></script>
    <script src="/Javascript/nav-bar.js"></script>
    <link rel="stylesheet" href="/CSS/myAccount.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>



<body>
    <div class="header">
        <%- include('./partials/Nav-bar.ejs') %>
    </div>

    <div class="wrapper">
        <div class="account-container">
            <h2>MY ACCOUNT</h2>
            <!-- <p>Please tell us about your preferences and special occasions by editing your personal information. We would love to share your celebration with exclusive content and surprises. Stay tuned!</p> -->
            <section class="personal-info">
                <h3>YOUR PERSONAL INFORMATION </h3>
                <% if (userInfo) { %>
                    <p>First Name: <%= userInfo.firstname %></p>
                    <p>Last Name: <%= userInfo.lastname %></p>
                    <p>Email Address: <%= userInfo.email %></p>
                   
                <% } else { %>
                    <p>User data not found.</p>
                <% } %>
            </section>
            <section class="order-history">
                <h3>ORDER HISTORY</h3>
                <% if (ordersUser.length > 0) { %>
                    <% ordersUser.forEach(order => { %>
                        <h2>Order ID: <%= order._id %></h2>
                        <div class="order-box">
                            <h3 class="status">Order Status: <%= order.status %></h3>
                            <ul class="product-list">
                                <% order.product_ids.forEach(product => { %>
                                    <li class="product-item">
                                        <div class="product-details">
                                            <h3><%= product.name %></h3>
                                            <p>Price: $<%= product.price %></p>
                                        </div>
                                        <img src="/images/Indian/Newfolder/<%= product.img %>" alt="<%= product.name %>">
                                    </li>
                                <% }); %>
                            </ul>

                            <div class="order-actions">
                                <h2>total price: <%= order.total_price %></h2>
                                <% if (order.status === 'pending') { %>
                                    <button class="cancel-button" onclick="openPopup('<%= order._id %>')">Cancel Order</button>
                                <% } %>
                                <% if (order.status === 'delivered') { %>
                                    <button class="review-button" onclick="openReviewPopup('<%= order._id %>')">Review Order</button>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No orders found.</p>
                <% } %>
                <button id="logout-button" class="logout-button" onclick="logout()">Logout</button>
            </section>
           
        </div>
    </div>

    <div class="footer">
        <%- include('./partials/footer.ejs') %>
    </div>

    <div id="custom-popup" class="custom-popup">
        <div class="popup-content">
            <span class="close-btn" onclick="closePopup()">&times;</span>
            <h2>Cancel Order Confirmation</h2>
            <p>Are you sure you want to cancel this order?</p>
            <div class="btn-container">
                <button class="confirm-btn" onclick="confirmCancel()">Yes</button>
                <button class="cancel-btn" onclick="closePopup()">Go Back</button>
            </div>
        </div>
    </div>
    <div id="review-popup" class="review-custom-popup">
        <div class="review-popup-content">
            <span class="review-close-btn" onclick="closeReviewPopup()">&times;</span>
            <h2>Write a Review</h2>
            <div class="review-rating">
                <span class="fa fa-star" data-rating="1"></span>
                <span class="fa fa-star" data-rating="2"></span>
                <span class="fa fa-star" data-rating="3"></span>
                <span class="fa fa-star" data-rating="4"></span>
                <span class="fa fa-star" data-rating="5"></span>
            </div>
            <textarea id="review-comment" class="review-comment" placeholder="Write your review here..."></textarea>
            <div class="review-btn-container">
                <button class="review-confirm-btn" onclick="submitReview()">Submit Review</button>
                <button class="review-cancel-btn" onclick="closeReviewPopup()">Cancel</button>
            </div>
        </div>
    </div>
</body>

</html>
