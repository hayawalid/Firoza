<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <link rel="stylesheet" href="/CSS/nav-bar-white.css">
    
    <link rel="stylesheet" href="/CSS/Footer.css">
    <script src="/Javascript/nav-bar.js"></script>
    <link rel="stylesheet" href="/CSS/myAccount.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>



<body>
    <div class="header">
        <%- include('./partials/Nav-bar.ejs') %>
    </div>

    <div class="wrapper">
        <div class="account-container">
            <h2>MY ACCOUNT</h2>
            <p>Please tell us about your preferences and special occasions by editing your personal information. We would love to share your celebration with exclusive content and surprises. Stay tuned!</p>
            <section class="personal-info">
                <h3>YOUR PERSONAL INFORMATION <a href="#">Edit</a></h3>
                <% if (userInfo) { %>
                    <p>First Name: <%= userInfo.firstname %></p>
                    <p>Last Name: <%= userInfo.lastname %></p>
                    <p>Email Address: <%= userInfo.email %></p>
                   
                <% } else { %>
                    <p>User data not found.</p>
                <% } %>
            </section>
            <section class="order-history">
                <h3>ORDER HISTORY</h3>
                <% if (ordersUser.length > 0) { %>
                    <% ordersUser.forEach(order => { %>
                        <h2>Order ID: <%= order._id %></h2>
                        <div class="order-box">
                            <h3 class="status">Order Status: <%= order.status %></h3>
                            <ul class="product-list">
                                <% order.product_ids.forEach(product => { %>
                                    <li class="product-item">
                                        <div class="product-details">
                                            <h3><%= product.name %></h3>
                                            <p>Price: $<%= product.price %></p>
                                        </div>
                                        <img src="<%= product.image %>" alt="<%= product.name %>">
                                    </li>
                                <% }); %>
                            </ul>
                            <div class="order-actions">
                                <% if (order.status === 'pending') { %>
                                    <button class="cancel-button">Cancel Order</button>
                                <% } %>
                                <% if (order.status === 'delivered') { %>
                                    <button class="review-button">Review Order</button>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No orders found.</p>
                <% } %>
            </section>
           
        </div>
    </div>

    <div class="footer">
        <%- include('./partials/footer.ejs') %>
    </div>
</body>

</html>
