<!DOCTYPE html>
<html>
<head>
   <title>Shopping Cart</title>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet" />
   <link rel="stylesheet" href="/css/shoppingcart.css">
   <link rel="stylesheet" href="/css/nav-bar-white.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   <script src="/Javascript/nav-bar.js"></script>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/Nav-bar.ejs') %>
    
    <div class="container mt-5">
        <div class="row">
           <div class="col-md-8">
              <div class="card">
                 <div class="card-body">
                    <h4 class="card-title">Shopping Cart</h4>
                    <p class="text-muted items-count"><%= cart.items.filter(item => item.productId).length %> items</p>
                    <% cart.items.forEach(item => { %>
                        <% if (item.productId) { %>
                            <div class="row mb-3 item-row" data-item="<%= item.productId._id %>">
                               <div class="col-3">
                                  <img src="/images/Indian/Newfolder/<%= item.productId.img %>" class="img-fluid rounded" alt="<%= item.productId.name %>">
                               </div>
                               <div class="col-6 item-info">
                                  <h6><%= item.productId.name %></h6>
                                  <p><%= item.productId.description %></p>
                               </div>
                               <div class="col-3 item-actions">
                                  <div class="input-group">
                                     <button class="btn btn-outline-secondary decrement" data-item="<%= item.productId._id %>">-</button>
                                     <input type="text" class="form-control text-center quantity-input" id="quantity-<%= item.productId._id %>" value="<%= item.quantity %>" aria-label="Quantity" readonly>
                                     <button class="btn btn-outline-secondary increment" data-item="<%= item.productId._id %>">+</button>
                                  </div>
                                  <p class="mb-0 item-price">EGP <%= item.price %></p>
                                  <button type="button" class="close remove-item" aria-label="Close">
                                     <span aria-hidden="true">&times;</span>
                                  </button>
                               </div>
                            </div>
                        <% } %>
                    <% }); %>
                    <div class="mt-4">
                       <a href="/shopAll" class="btn btn-link">&leftarrow; Back to shop</a>
                    </div>
                 </div>
              </div>
           </div>
           <div class="col-md-4">
              <div class="card">
                 <div class="card-body summary">
                    <h5 class="card-title">Summary</h5>
                    <hr>
                    <div class="d-flex justify-content-between">
                       <span class="items-count"><%= cart.items.filter(item => item.productId).length %> ITEMS</span>
                       <span class="total-price">EGP <%= cart.items.reduce((total, item) => item.productId ? total + (item.price * item.quantity) : total, 0) %></span>
                    </div>
                    <div class="shipping-options">
                       <label for="shipping">Shipping:</label>
                       <select id="shipping" class="form-select">
                          <option value="standard" selected>Standard Delivery - EGP 100.00</option>
                          <option value="fast">Fast Delivery - EGP 150.00</option>
                       </select>
                    </div>
                    <p>DISCOUNT CODE</p>
                    <input id="code" class="form-control" placeholder="Enter your code">
                    <div class="d-flex justify-content-between mt-3">
                       <strong>TOTAL PRICE</strong>
                       <strong class="total-price">EGP <%= cart.items.reduce((total, item) => item.productId ? total + (item.price * item.quantity) : total, 0) + 100 %></strong>
                    </div>
                    <button class="btn btn-dark btn-block mt-4" id="checkout">CHECKOUT</button>
                    <a href="/shopAll.ejs" class="btn btn-dark btn-block mt-4">CONTINUE SHOPPING</a>
                 </div>
              </div>
           </div>
        </div>
     </div>
   <script src="../Javascript/ShoppingCart.js"></script>
</body>
</html>
