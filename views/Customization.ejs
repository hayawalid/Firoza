<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/shoppingcart.css">
    <link rel="stylesheet" href="/css/nav-bar-white.css">
    <link rel="stylesheet" href="/css/Customization.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Customization</title>
</head>

<body>
    <%- include('./partials/Nav-bar.ejs') %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Shopping Cart</h4>
                            <p class="text-muted items-count">Items count here</p>
                            <!-- Repeat this block for each item in the cart -->
                            <div class="row mb-3 item-row">
                                <div class="col-3">
                                    <img src="" class="img-fluid rounded">
                                </div>
                                <div class="col-6 item-info">
                                    <h6>Product Name</h6>
                                    <p>Product Description</p>
                                </div>
                                <div class="col-3 item-actions">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary decrement">-</button>
                                        <input type="text" class="form-control text-center quantity-input"
                                            aria-label="Quantity" readonly>
                                        <button class="btn btn-outline-secondary increment">+</button>
                                    </div>
                                    <p class="mb-0 item-price">EGP </p>
                                    <button type="button" class="close remove-item" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                            <!-- End of repeat block -->
                            <div class="mt-4">
                                <a href="/shopAll" class="btn btn-link">&leftarrow; Back to shop</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body summary">
                            <h5 class="card-title">Customize your ring</h5>
                            <hr>
                            <div class="shipping-options">
                                <canvas id="canvas3d"></canvas>
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <button id="button1">Red</button>
                                <button id="button2">Green</button>
                                <button id="button3">Blue</button>
                                <button id="button4">Yellow</button>
                                <button id="button5">White</button>
                            </div>
                            <button class="btn btn-dark btn-block mt-4" id="checkout">CHECKOUT</button>
                            <a href="/shopAll.ejs" class="btn btn-dark btn-block mt-4">CONTINUE SHOPPING</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="module" src="../Javascript/diamonds.js"> </script>
        <script src="../Javascript/ShoppingCart.js"></script>
</body>

</html>