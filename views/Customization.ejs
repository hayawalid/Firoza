<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/nav-bar-white.css">
    <link rel="stylesheet" href="/css/Customization.css">
    <link rel="stylesheet" href="/css/3d.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Customization</title>
</head>

<body>
    <%- include('./partials/Nav-bar.ejs') %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ring</h4>
                            <div class="row mb-3 item-row">
                                <div id="loading-spinner" class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <canvas id="Ring"></canvas>
                            </div>
                            <!-- End of repeat block -->

                            <div class="mt-4">
                                <a href="/shopAll" class="btn btn-link">&leftarrow; Back to shop</a>
                                <button id="button1" data-color="Red">Red</button>
                                <button id="button2" data-color="Green">Green</button>
                                <button id="button3" data-color="Blue">Blue</button>
                                <button id="button3" data-color="Yellow">Yellow</button>
                                <button id="button4" data-color="White">White</button>
                                <a class="buttonP" href="#popup1">Virtal try on</a>
                            </div>

                            <div id="popup1" class="overlay">
                                <div class="popup">
                                    <h2>Scan with your phone</h2>
                                    <a class="close" href="#">&times;</a>
                                    <div class="content">
                                        <img id="customImage" src="" alt="Customized Image">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body summary">
                            <h5 class="card-title">Customize your ring</h5>
                            <hr>
                            <div class="shipping-options">
                                <canvas id="canvas3d"></canvas>

                            </div>
                            <div class="d-flex justify-content-between mt-3 displayButton">


                            </div>
                            <div class="buttons">
                                <button class="shape-button" data-shape="Heart">Heart</button>
                                <button class="shape-button" data-shape="Pear">Pear</button>
                                <button class="shape-button" data-shape="Oval">Oval</button>
                                <button class="shape-button" data-shape="Emerald">Emerald</button>
                            </div>
                            <div class="buttons">
                                <button class="shape-button" data-shape="Round">Round</button>
                                <button class="shape-button" data-shape="Radient">Radient</button>
                                <button class="shape-button" data-shape="Marquise">Marquise</button>
                            </div>
                            <div class="buttons">
                                <button class="shape-button" data-shape="Princess">Princess</button>
                                <button class="shape-button" data-shape="Cushion">Cushion</button>
                                <button class="shape-button" data-shape="Asscher">Asscher</button>
                            </div>
                            <button class="btn btn-dark btn-block mt-4" id="checkout">Add to cart</button>
                            <a href="/shopAll.ejs" class="btn btn-dark btn-block mt-4">CONTINUE SHOPPING</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="module" src="../Javascript/diamonds.js"> </script>
        <script type="module" src="../Javascript/ring.js"> </script>
        <script src="../Javascript/ShoppingCart.js"></script>
</body>

</html>